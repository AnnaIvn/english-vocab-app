@model EnglishVocabApp.ViewModels.WordViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">Are you sure you want to delete this word?</h3>
<div class="p-3 mb-3">
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Word:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Transcript:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Transcript)</dd>

        <dt class="col-sm-3">Meaning:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Meaning)</dd>

        <dt class="col-sm-3">Type:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TypeName)</dd>

        <dt class="col-sm-3">Examples:</dt>
        <dd class="col-sm-9">
            @if (Model.Examples.Any())
            {
                <ul>
                    @foreach (var example in Model.Examples)
                    {
                        <li>@example</li>
                    }
                </ul>
            }
            else
            {
                <text>None</text>
            }
        </dd>

        <dt class="col-sm-3">Synonyms:</dt>
        <dd class="col-sm-9">
            @if (Model.Synonyms.Any())
            {
                <span>@string.Join(", ", Model.Synonyms)</span>
            }
            else
            {
                <text>None</text>
            }
        </dd>

        <dt class="col-sm-3">Antonyms:</dt>
        <dd class="col-sm-9">
            @if (Model.Antonyms.Any())
            {
                <span>@string.Join(", ", Model.Antonyms)</span>
            }
            else
            {
                <text>None</text>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
